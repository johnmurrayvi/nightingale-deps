NG_VENDOR_TARGET = gst-plugins-ugly
NG_VENDOR_TARGET_VERSION = 1.2.3

include $(CURDIR)/../vendor-defs.mk

NG_VENDOR_TARGET_CONFIGURE_OPTS := \
        --disable-examples \
        --disable-tests \
        --disable-gtk-doc \
        --disable-liboil \
        --disable-dvdsub --disable-dvdlpcmdec --disable-realmedia \
        --disable-mpegstream --disable-iec958 \
        --disable-synaesthesia \
        --disable-a52dec --disable-amrnb --disable-cdio \
        --disable-dvdnav --disable-dvdread --disable-lame \
        --disable-mad --disable-mpeg2dec --disable-sidplay

ifeq (Msys,$(NG_VENDOR_ARCH))
  # use clwrapper in libtool-based modules for symbol generation (see bug 6486)
  NG_CC = $(CURDIR)/../clwrapper.py
  NG_CXX = $(CURDIR)/../clwrapper.py
  NG_CFLAGS += -D_USE_MATH_DEFINES -D_UNICODE -DUNICODE
  NG_USE_MOZCRT = 1
endif

NG_VENDOR_TARGET_DYLIB_FIXUPS = $(addprefix libgst, \
  $(addsuffix -1.0, $(sort $(GST_BASE_DYLIBS))))

include $(CURDIR)/../vendor-rules.mk
